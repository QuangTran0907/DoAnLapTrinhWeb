                <div class="panel panel-heading">
                    <p>@item.LoaiGame.tengame</p>
                </div>
                <div class="panel-body">
                    <p><img src="@item.hinh" width="160px" height="256px" alt="hinh thumnail"></p>
                    <p><strong>Rank: </strong>@item.rank</p>
                    <p><strong>Tướng :</strong>@item.tuong</p>
                    <p><strong>Trang phục: </strong>@item.trangphuc</p>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.id }) |  @Html.ActionLink("Detail", "Detail", new { id = item.id }) |  @Html.ActionLink("Delete", "Delete", new { id = item.id })
                    </td>


                </div>


